<script>
	
	$(function() {
		
		$("form").submit(function(event) {
			event.preventDefault();
			var data = $(this).serialize();
			
			$.ajax({
				url		: "/admin/module/re-captcha/save.ajax",
				data	: data,
				success	: function(response){
					if (response == "1") {
						window.location.reload();
					} else {
						
						alert(response);
					}
				}
			});
		});
		
	});
	
</script>

