<form>
	
	<div class="well clearfix">
		
		<div class="form-group clearfix">
			<label class="col-lg-2 control-label"><?php echo $this->translate('Public key'); ?><b>*</b></label>
			<div class="col-lg-10">
				<input type="text" name="title" class="form-control" required="required" />
			</div>
		</div>
		
		
		<div class="form-group clearfix">
			<label class="col-lg-2 control-label"><?php echo $this->translate('Private key'); ?><b>*</b></label>
